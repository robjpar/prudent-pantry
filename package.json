{
  "name": "prudent-pantry",
  "version": "1.0.0",
  "description": "Prudent Pantry MERN Stack App",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server.js\" \"cd client && npm run start\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "engines": {
    "node": "10.15.3"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robjpar/prudent-pantry.git"
  },
  "keywords": [
    "react",
    "mongo",
    "express",
    "node"
  ],
  "author": "David LiaBraaten, Mohsen Shojaeifar, Robert Paruch & Tyler Jeffe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robjpar/prudent-pantry/issues"
  },
  "homepage": "https://github.com/robjpar/prudent-pantry#readme",
  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.14"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.1"
  }
}
